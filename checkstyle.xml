<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="fileExtensions" value="java"/>

    <module name="TreeWalker">
        <module name="AvoidStarImport"/>

        <module name="EmptyLineSeparator">
            <property name="tokens" value="PACKAGE_DEF, IMPORT, METHOD_DEF"/>
            <!--property name="allowMultipleEmptyLines" value="false"/-->
            <!--property name="allowMultipleEmptyLinesInsideClassMembers" value="false"/-->
        </module>

        <!-- TODO: figure how to track the order of javax and java packages -->
        <module name="CustomImportOrder">
            <property name="customImportOrderRules"
                      value="STANDARD_JAVA_PACKAGE###SPECIAL_IMPORTS###THIRD_PARTY_PACKAGE###STATIC"/>
            <property name="specialImportsRegExp" value="^(com|org|net|springfox)\.(?!softserve)"/>
            <property name="thirdPartyPackageRegExp" value="^com\.softserve\.itacademy\."/>
            <property name="separateLineBetweenGroups" value="true"/>
        </module>

        <module name="LocalFinalVariableName"/>
    </module>
</module>